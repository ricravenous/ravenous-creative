<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Ravenous Creative" %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
  <div class="page-layout__container">
    <div class="nav__top">
    <% link_to 'index.html' do %>
    <%= image_tag 'logo__box--stamp.svg', :class => 'rvnsc__logo--stamp' %>
    <% end %>

      <div class="page_social_links">
      <% link_to 'http://www.instagram.com' do %>
        <%= image_tag 'insta_btn.svg', :class => 'homepage_btn' %>
      <% end %>
      <% link_to 'http://www.twitter.com' do %>
        <%= image_tag 'twit_btn.svg', :class => 'homepage_btn' %>
      <% end %>
      <% link_to 'http://www.dribbble.com' do %>
        <%= image_tag 'dribb_btn.svg', :class => 'homepage_btn' %>
      <% end %>
      <% link_to 'http://www.behance.com' do %>
        <%= image_tag 'behance_btn.svg', :class => 'homepage_btn' %>
      <% end %>
      <% link_to 'http://www.github.com' do %>
        <%= image_tag 'github_btn.svg', :class => 'homepage_btn' %>
      <% end %>
  </div>
      <div class="mainpage__nav">
        <%= link_to 'about', 'about.html' %> &middot;
        <%= link_to 'portfolio', 'portfolio.html' %> &middot;
        <%= link_to 'contact', 'contact.html' %>
    </div>
  </div>

      <%= yield %>

      <div class="footer__banner">
        <button>let's connect</button>
        <p class="copyright__type">copyright 2018</p>
      </div>
  </div>
  </body>
  </body>
</html>
